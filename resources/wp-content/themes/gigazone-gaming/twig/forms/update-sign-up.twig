<form action='/app/updates/signup' class='form-horizontal doAjaxForm doGeoLocate doForm well well-gz' id='updateSignUpForm' method='post' novalidate='novalidate'>
  <fieldset>
    <input name='update-recipient' type='hidden' value='yes'>
    <legend>Sign up for updates</legend>
    <div class='form-group'>
      <label class='col-md-3 control-label' for='updateSignUpForm-email'>Your Email</label>
      <div class='col-md-5'>
        <input class='form-control input-md' id='updateSignUpForm-email' name='email' placeholder='Your Email Address' required='' type='email'>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-9 col-md-push-3'>
        <div class='checkbox'>
          <label for='updateSignUpForm-participate'>
            <input id='updateSignUpForm-participate' name='participate' type='checkbox' value='yes'>
            I would like to participate in the tournament
          </label>
        </div>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-9 col-md-push-3'>
        <button class='btn btn-default btn-gz' id='updateSignUpFormSubmit' name='doSubmit'>Submit</button>
        <span class='fa-stack fa-lg progress-container' style='display: none;'>
          <i class='fa fa-circle fa-stack-2x'></i>
          <i class='fa fa-refresh fa-spin fa-stack-1x fa-inverse'></i>
        </span>
      </div>
    </div>
  </fieldset>
  <div class='message-container'></div>
</form>
