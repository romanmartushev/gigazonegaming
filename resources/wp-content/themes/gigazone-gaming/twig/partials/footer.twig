<div id='footer-content'>
  {% if footer_highlight_links is defined and footer_highlight_links|length > 0 %}
  <div class='footer--items-container'>
    <div class='container'>
      <div class='row row-flex row-flex-wrap'>
        {% for link in footer_highlight_links %}
        <div class='col-sm-4'>
          <div class='sidebar-highlight-link footer--highlight-link  flex-col'>
            <div class='sidebar-highlight-link-title'>
              {% if link.link_image|length > 0 %}
              <a href='{{link.link_url}}' target='{{ link.link_target }}'>
                <img alt='{{ link.link_name }}' class='footer-hightlight-title' src='{{link.link_image}}'>
              </a>
              {% else %}
              <h3 class='sidebar-highlight-title'>
                <a href='{{link.link_url}}' target='{{ link.link_target }}'>{{ link.link_name }}</a>
              </h3>
              {% endif %}
            </div>
            <p class='sidebar-highlight-link-description footer-highlight-link-description'>
              {% if link.link_image|length > 0 %}
              <strong>{{ link.link_name }}</strong>
              {% endif %}
              {{ link.link_description }}
              <br>
              <a href='{{link.link_url}}' target='{{ link.link_target }}'>
                <strong>Learn More&#8230;</strong>
              </a>
            </p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% endif %}
  <div class='footer--bottom'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-6'>
          <div class='text-left font--display text-uppercase footer--information txt-color--branding'>
            <hr class='divider horizontal dashed slim'>
            <strong>
              Content &copy; {{ first_post.post_date|date("Y") }} - {{ "now"|date('Y') }} {{ function('get_option','blogname') }}, all the things reserved.
            </strong>
            <hr class='divider horizontal dashed slim'>
            <div class='row'>
              <div class='col-md-3 footer--presented-by-label'>
                Presented By:
              </div>
              <div class='col-md-9'>
                <a class='logos--pbc-on-dark footer--presented-by-logo' href='https://www.paulbunyan.net/' title='Paul Bunyan Communications, Right Here'>
                  Paul Bunyan Communications, Right Here
                </a>
              </div>
            </div>
            <hr class='divider horizontal dashed slim'>
          </div>
        </div>
        <div class='col-sm-6'>
          <hr class='divider horizontal dashed slim hidden-xs'>
          <div class='sidebar'>
            <div class='sidebar-social-media'>
              <ul class='footer--bottom--social-list'>
                <li class="inline-block footer--bottom--social-list-item">{% include 'partials/social-media.twig' %}</li><li class="inline-block footer--bottom--social-list-item footer--bottom--social-list-item--signup">{% include "partials/wigets/constant_contact_signup_button.twig" %}</li>
              </ul>
            </div>
          </div>
          <hr class='divider horizontal dashed slim'>
          <div class='text-left font--display text-uppercase footer--information txt-color--branding'>
            <p>
              <a href='https://www.paulbunyan.net/gigazone/index.html'>
                <img alt='Gigazone Service' class='img' src='https://www.paulbunyan.net/images/banners/index-728/GigaZone.png'>
              </a>
            </p>
          </div>
          <hr class='divider horizontal dashed slim'>
        </div>
      </div>
    </div>
  </div>
</div>
{% include "partials/footer-js.twig" %}
