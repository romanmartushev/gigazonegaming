{% if social_links is defined %}
{% for social in social_links %}
{% if social.link_url != "#" %}
<div class='social-media{% if loop.first == true%} first{% elseif loop.last == true %} last{%endif%}'>
  <a class='btn btn-social' href='{{ social.link_url }}' target='{{ social.link_target }}'>
    <i class='fa fa-{{ social.link_name|slugify }}'></i>
  </a>
</div>
{% endif %}
{% endfor %}
{% endif %}
