{% extends "base/base.twig" %}
{% block article %}
<div class='container'>
  <div class='row'>
    {% set layout = (page.layout is defined ? page.layout|slugify : "sidebar") %}
    <div class='layout layout-{{layout|slugify}}'>
      {% include ["partials/layouts/layout-" ~ layout ~ ".twig", "partials/layouts/layout-sidebar.twig"] %}
    </div>
  </div>
</div>
{% endblock %}
